<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Student Mode Button -->
    <Button
        android:id="@+id/btnStudent"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Student Mode"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_student_ripple"
        android:layout_marginBottom="24dp"
        android:stateListAnimator="@null"/> <!-- Remove elevation to keep ripple clean -->


    <Button
        android:id="@+id/btnFaculty"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Faculty Mode"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_faculty_ripple"
        android:layout_marginBottom="32dp"/>



    <!-- Register as Student -->
    <TextView
        android:id="@+id/tvRegisterStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as Student"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="16dp"/>

    <!-- Register as Faculty -->
    <TextView
        android:id="@+id/tvRegisterFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as Faculty"
        android:textColor="@android:color/holo_blue_dark"/>

</LinearLayout>
